!docker-compose.yaml
!docker-compose.yml
!Dockerfile
!.dockerignore
!php.ini
!nginx.conf
!default.conf
!docker-entrypoint-extras.sh

# Allow Composer files
!composer.json
!composer.lock

# Allow LICENSE file
!LICENSE

# Then allow only wp-content/plugins directory
!/wp-content/
/wp-content/*
!/wp-content/plugins/
