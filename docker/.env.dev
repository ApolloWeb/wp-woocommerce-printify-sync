APP_ENV=dev

# WordPress Configuration
WORDPRESS_VERSION=latest
WORDPRESS_LOCALE=en_GB
WORDPRESS_PATH=/var/www

# Database Configuration
MYSQL_ROOT_PASSWORD=root_password
WORDPRESS_DB_NAME=wordpress
WORDPRESS_DB_USER=wordpress_user
WORDPRESS_DB_PASSWORD=wordpress_password
WORDPRESS_DB_HOST=db # Use 'db' instead of 'localhost'

# Debugging (Enabled for development)
WP_DEBUG=true
WP_DEBUG_LOG=true
WP_DEBUG_DISPLAY=true
SCRIPT_DEBUG=true
SAVEQUERIES=true

# Plugin Repository (Development Version)
PLUGIN_REPO=https://github.com/ApolloWeb/wp-woocommerce-printify-sync.git
PLUGIN_BRANCH=main
