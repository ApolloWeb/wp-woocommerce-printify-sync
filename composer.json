{
  "name": "yourname/wordpress-tools",
  "description": "Development tools for WordPress: PHP_CodeSniffer, PHPCBF, PHPStan, and associated utilities",
  "type": "project",
  "require": {
    "php": ">=8.2"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.7",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
    "wp-coding-standards/wpcs": "^2.3",
    "phpcsstandards/phpcsutils": "dev-stable",
    "phpcsstandards/phpcsextra": "dev-stable",
    "phpstan/phpstan": "^1.9",
    "szepeviktor/phpstan-wordpress": "dev-master"
  },
  "scripts": {
    "phpcs": "vendor/bin/phpcs -d memory_limit=2048M --standard=WordPress .",
    "phpcbf": "vendor/bin/phpcbf --standard=WordPress .",
    "phpstan": "vendor/bin/phpstan analyse"
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/PHPCSStandards/PHPCSUtils"
    },
    {
      "type": "vcs",
      "url": "https://github.com/PHPCSStandards/PHPCSExtra"
    },
    {
      "type": "vcs",
      "url": "https://github.com/szepeviktor/phpstan-wordpress"
    }
  ],
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "composer/installers": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
