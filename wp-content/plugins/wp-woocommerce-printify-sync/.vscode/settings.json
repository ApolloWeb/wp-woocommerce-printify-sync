{
  // === Copilot Core Features ===
  "github.copilot.editor.enableAutoCompletions": true,  // Autocomplete in editor
  "github.copilot.chat.enable": true,                   // Copilot Chat sidebar
  "github.copilot.status.show": true,                   // Show status icon

  // === Inline Suggestions & Editor Tweaks ===
  "editor.inlineSuggest.enabled": true,                 // Inline completions (ghost text)
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": true
  },
  "editor.suggest.snippetsPreventQuickSuggestions": false,

  // === Experimental / Advanced Features ===
  "github.copilotChat.experimental.remoteIndexing": true, // Helps with context awareness
  "github.copilot.experimental.inlineChat": true,         // Enables inline chat/edits
  "github.copilotChat.enableAgent": true,                 // Enables Copilot Agents
  "github.copilotChat.enableFixes": true,                 // Enables inline fixes (e.g. // copilot: fix this)

  // === Model Preference (if supported) ===
  "github.copilot.model": "gpt-4",                         // Preferred model (if multiple available)

  // === Restrict Copilot to Specific Languages ===
  "github.copilot.enable": {
    "*": false,
    "php": true,
    "javascript": true,
    "css": true
  }
}
