{
  "name": "myvendor/my-wordpress-project",
  "description": "A WordPress development environment with code quality tools.",
  "type": "project",
  "require": {
    "php": ">=8.1",
    "johnpbloch/wordpress-core-installer": "^2.0",
    "johnpbloch/wordpress": "^6.3"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.0",
    "squizlabs/php_codesniffer": "^3.7",
    "wp-coding-standards/wpcs": "^3.0",
    "phpstan/phpstan": "^1.10",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "MyPlugin\\": "./wp-content/plugins/wp-woocommerce-printify-sync/"
    }
  },
  "scripts": {
    "lint": [
      "find . -name \"*.php\" | xargs -n1 php -l"
    ],
    "cs": [
      "phpcs --standard=WordPress-Core --extensions=php ."
    ],
    "cbf": [
      "phpcbf --standard=WordPress-Core --extensions=php ."
    ],
    "fix": [
      "php-cs-fixer fix --config=.php_cs --verbose"
    ],
    "analyze": [
      "phpstan analyse --level=max ."
    ],
    "setup": [
      "composer install",
      "vendor/bin/phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs"
    ]
  },
  "extra": {
    "wordpress-install-dir": "wp"
  }
}
