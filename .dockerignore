# Ignore Git repository
.git/
.gitignore

# Ignore environment files (Do NOT expose secrets)
.env
.env.local

# Ignore build-related files
build.sh
docker-bake.hcl

# Ignore logs, cache, and temp files
*.log
*.cache
*.swp
*.swo
*.bak

# Ignore configuration files
etc/supervisord.conf
nginx/nginx.conf
nginx/conf.d/
php/php.ini
php-fpm/php-fpm.conf
mariadb/my.cnf

# Ignore WordPress core (handled inside container)
wp/

# Ignore wp-content (except the plugin you're working on)
wp-content/*
!wp-content/plugins/
!wp-content/plugins/wp-woocommerce-printify-sync/

# Ignore dependency directories (Composer)
#vendor/
node_modules/
vendor/