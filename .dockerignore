# Ignore system files
.DS_Store
Thumbs.db

# Ignore Git files
.git
.gitignore

# Ignore GitHub Actions files (Not needed in Docker)
.github/

# Ignore local environment files
.env
.env.local
.env.production
.env.development

# Ignore Composer dependencies (they will be installed inside the container)
vendor/

# Ignore all of wp-content except your plugin
wp-content/*
!wp-content/plugins/wp-woocommerce-printify-sync/

# ✅ Allow wp-config.php but ignore a specific file
!wp-config.php
!index.php

# ✅ Keep certs (SSL) & nginx (for webserver config)
# Do NOT ignore certs/ and nginx/
# certs/  ❌ REMOVED from ignore list
# nginx/  ❌ REMOVED from ignore list

# Ignore logs, cache, and tmp files
logs/
*.log
tmp/
cache/
wp-content/uploads/
wp-content/cache/

# Ignore node_modules (if using npm/yarn in theme development)
node_modules/
npm-debug.log
yarn.lock
