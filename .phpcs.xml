<?xml version="1.0"?>
<ruleset name="Project Rules">
    <description>PHP_CodeSniffer rules for the project.</description>

    <!-- ✅ Define the coding standard (WordPress Coding Standards or PSR12) -->
    <rule ref="PSR12"/>

    <!-- ✅ Exclude all WordPress core files -->
    <exclude-pattern>wp/*</exclude-pattern>

    <!-- ✅ Exclude everything in wp-content, except your plugin -->
    <exclude-pattern>wp-content/themes/*</exclude-pattern>
    <exclude-pattern>wp-content/mu-plugins/*</exclude-pattern>
    <exclude-pattern>wp-content/uploads/*</exclude-pattern>
    <exclude-pattern>wp-content/plugins/*</exclude-pattern>
    <exclude-pattern>vendor/*</exclude-pattern>

    <!-- ✅ Include only your plugin -->
    <include-pattern>wp-content/plugins/wp-woocommerce-printify-sync/*</include-pattern>

</ruleset>
