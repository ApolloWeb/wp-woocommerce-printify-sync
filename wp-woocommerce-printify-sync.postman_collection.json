{
  "info": {
    "name": "WP WooCommerce Printify Sync",
    "description": "Postman collection for WP WooCommerce Printify Sync plugin",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Printify API",
      "item": [
        {
          "name": "Get Products",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{printify_api_key}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "https://api.printify.com/v1/products.json",
              "protocol": "https",
              "host": [
                "api",
                "printify",
                "com"
              ],
              "path": [
                "v1",
                "products.json"
              ]
            }
          }
        },
        {
          "name": "Create Order",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{printify_api_key}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"order_data\": \"...\"\n}"
            },
            "url": {
              "raw": "https://api.printify.com/v1/orders.json",
              "protocol": "https",
              "host": [
                "api",
                "printify",
                "com"
              ],
              "path": [
                "v1",
                "orders.json"
              ]
            }
          }
        }
      ]
    },
    {
      "name": "WooCommerce API",
      "item": [
        {
          "name": "Get Products",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Basic {{woocommerce_api_key}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{woocommerce_store_url}}/wp-json/wc/v3/products",
              "host": [
                "{{woocommerce_store_url}}"
              ],
              "path": [
                "wp-json",
                "wc",
                "v3",
                "products"
              ]
            }
          }
        },
        {
          "name": "Create Order",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Basic {{woocommerce_api_key}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"order_data\": \"...\"\n}"
            },
            "url": {
              "raw": "{{woocommerce_store_url}}/wp-json/wc/v3/orders",
              "host": [
                "{{woocommerce_store_url}}"
              ],
              "path": [
                "wp-json",
                "wc",
                "v3",
                "orders"
              ]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "printify_api_key",
      "value": "",
      "type": "string"
    },
    {
      "key": "woocommerce_api_key",
      "value": "",
      "type": "string"
    },
    {
      "key": "woocommerce_store_url",
      "value": "",
      "type": "string"
    }
  ]
}